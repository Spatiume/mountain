.menu{
  width: 100%;
}
.menu__list{
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.menu__item{
  margin-right: 8px;

  &:last-child{
    margin-right: 0;
  }
}


.menu__link{
  white-space:nowrap;
  font-size: 16px;
  &:hover{
    color: $links-color;
    text-decoration: underline;
  }
}