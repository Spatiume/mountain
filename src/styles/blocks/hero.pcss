.hero {
  display: block;
  position: relative;
  height: 100vh;
  min-height: 650px;
  margin-bottom: 306px;
}

.hero__container {
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
}


.hero__content {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  padding-bottom: 4%;
}

.hero__bottom-btn {
  position: absolute;
  left: 47%;
  bottom: 0.5%;
}