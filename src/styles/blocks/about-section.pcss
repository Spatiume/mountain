.about-section {
  position: absolute;
  display: flex;
  bottom: 150px;
  width: 100%;

  @include tablets {
    position: relative;
    bottom: initial;
    margin-bottom: 20px;
  }


}

.about__decoration{
  display: none;


  @include tablets{
    display: block;
  }

  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  .hero__decoration-img{
    position: absolute;
  }

}
