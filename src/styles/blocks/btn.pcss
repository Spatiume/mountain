.btn {
  padding: 30px 120px;
  background-image: linear-gradient(to top, #5500f2, #ad00ed);
  border: 6px solid transparent;
  border: 0;
  text-transform: uppercase;
  font-size: 18px;
  font-weight: 700;
  color: white;
  border-radius: 40px 0 40px 0;
  cursor: pointer;
  opacity: 0.85;

  &:hover{
    // border: 6px solid #5500f2;
    opacity: 1;
  }
  

  @include phones {
    width: 100%;
    padding-right: 10px;
    padding-left: 10px;
  }
}