.socials{
  display: flex;
}

.socials--vertical{
  flex-wrap: wrap;

  .socials__item{
    margin-right: 15%;

    &:last-child{
      margin-right: 0;
    }
  }
}

.socials__item{
  margin-right: 40px;

  &:last-child{
    margin-right: 0;
  }
}

.socials__link{
  width: 30px;
  height: 30px;
  display: block;
}

.socials__icon{
  fill: currentColor;
  width: 100%;
  height: 100%;

  &:hover,:focus,:active{
    fill: $links-color;
  }
}


