script(type="text/x-template")#skills-list
  ul.skills
    li.skills__item(v-for="category in skills" :key="category.title")
      skills-row(:category="category")

script(type="text/x-template")#skills-row
  .skills-row 
    .skills-row__title {{category.title}}
    ul.skills-row__list 
      li.skills-row__item(v-for="skill in category.skills")
        skill(:skill="skill")


script(type="text/x-template")#skill
  .skill(@click="changeColoredCircle" )
    svg(viewBox="0 0 100 100" ).skill__circle-shape
      circle(cx="50" cy="50" r="40").skill__circle.skill__circle-under
      circle(:class="{active: active}" cx="50" cy="50" r="40" ref="circle" stroke="url(#gradient)" transform='rotate(180 50 50)').skill__circle.skill__circle-above

      linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
        stop(offset="0%" stop-color="#5500f2")
        stop(offset="100%" stop-color="#ad00ed")
    .skill__title {{skill.title}}